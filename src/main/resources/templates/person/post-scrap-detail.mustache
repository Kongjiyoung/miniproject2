{{> layout/header}}
<!--<div class="container justify-content-center mt-4 mb-5">-->
<div class="container d-flex">
    <div class=" mx-2 pb-4 w-100">
        <div class="px-5 pt-5 pb-2">
        </div>
        {{#scrap}}
            <div class="border border-tertiary p-5 rounded shadow">
                <div class="px-5">
                    <input style="display: none" id="personId">
                    <div class="d-flex justify-content-start align-items-center">
                        <div class="col">
                            <h3 style="font-weight: bold">{{title}}</h3>
                        </div>
                        <form action="/person/scrap/{{id}}/detail/delete" method="post">
                            <div class="d-flex justify-content-end">
                                <button class="btn btn-outline-success" type="submit">취소하기</button>
                            </div>
                        </form>
                    </div>
                    <hr class="d-inline-flex w-100">
                    <form id="searchForm" class="row d-flex justify-content-end g-3 align-items-center"
                          action="/person/scrap/{{id}}/detail/apply" method="post">
                        <div class="col-auto">
                            <select class="form-select form-select-sm" aria-label="Default select example"
                                    id="resumeChoice"
                                    name="resumeChoice">
                                <option selected disabled>이력서를 선택해 주세요</option>
                                {{#resumeList}}
                                    <option value="{{id}}">{{title}}</option>
                                {{/resumeList}}
                            </select>
                        </div>
                        <div class="col-auto">
                            <button class="btn btn-outline-success btn-sm" type="submit"><i
                                    class="far fa-paper-plane"></i>
                            </button>
                        </div>
                    </form>
                </div>
                <script>
                    $("#searchForm").submit(function () {
                        let selectedOption = $("#postChoice").val();
                        if (!selectedOption) {
                            alert("이력서를 선택해 주세요.");
                            return false;
                        }
                    });
                    $("#postChoice").change(function () {
                        let selectedOption = $(this).val();
                        let searchButton = $("#searchButton");
                        searchButton.prop("disabled", !selectedOption);
                    });
                </script>
                <div class="pt-2 mt-3">
                    <div class="border border-tertiary px-3 py-3 pt-3 d-inline-flex ms-2 me-3 mb-3 w-100">
                        <div>
                            <img src="/images/{{profile}}" alt="이력서 사진" style="width: 100%; height: 226px;">
                        </div>
                        <table class="mx-4">
                            <tr>
                                <td>경력</td>
                                <td>{{career}}</td>
                            </tr>
                            <tr>
                                <td>최소 연봉</td>
                                <td>{{pay}}</td>
                            </tr>
                            <tr>
                                <td>마감일</td>
                                <td>{{deadline}}</td>
                            </tr>
                            <tr>
                                <td>회사명</td>
                                <td><a href="#" style=" color: black; font-weight: bold;">{{companyName}}</a>
                                </td>
                                <!-- TODO: 가능하다면 이 회사의 진행 중인 채용 공고 모음을 만들어보자 -->
                            </tr>
                        </table>
                    </div>
                    <div class="mt-5">
                    </div>
                    <div class="mt-5 task">
                        <h4>주요 업무</h4>
                        <div>{{task}}</div>
                    </div>
                    <div class="mt-5 working-time">
                        <h4>근무 시간</h4>
                        <div>{{workStartTime}} ~ {{workEndTime}}</div>
                    </div>
                    <div class="mt-5 working-time">
                        <h4>근무 지역</h4>
                        <div>{{workingArea}}</div>
                    </div>
                    <div class="mt-5 working-time">
                        <h4>혜택 및 복지</h4>
                        <div>{{workCondition}}</div>
                    </div>
                    <div class="mt-5 qualification">
                        <h4>필요 스킬</h4>
                        <div class="d-flex justify-content-start">
                            <div class="row row-cols-auto gap-3 justify-content-start my-3" style="width: 70%;">
                                {{#skillList}}
                                    <div class="btn btn-outline-primary mx-3 disabled">{{skill}}</div>
                                {{/skillList}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{/scrap}}

    </div>
    <!-- list-group( 오른쪽 바로가기) 시작 -->
    {{> layout/person-menu}}

    <!-- list-group( 오른쪽 바로가기) 끝 -->
</div>


{{> layout/footer}}